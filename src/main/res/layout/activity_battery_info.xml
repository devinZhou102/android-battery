<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/battery_level_status"
        android:layout_gravity="center_horizontal|left" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/battery_level_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="2dp"
        android:background="#ff0058c5"
         />
    <cn.edu.pkusz.battery.indicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#ff3c3c3c"
        custom:fillColor="#ffeeeeee"
        custom:pageColor="#88FF0000"
        custom:strokeColor="#ff0058c5"
        custom:strokeWidth="1dp"
        custom:radius="5dp"
        custom:centered="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#ff312c2f">
    <!-- 添加 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        
        <RelativeLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:orientation="horizontal" >
			<TextView
			    android:id="@+id/XinTextView3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="40dp"
			    android:text="健康状况"
			    android:textColor="@android:color/white"
			    android:textSize="25sp" />

			<TextView
			    android:id="@+id/TV1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:textSize="25sp"
			    android:layout_marginRight="40dp" />
        </RelativeLayout>
        
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@android:color/background_dark" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:orientation="horizontal" >
			<TextView
			    android:id="@+id/XinTextView4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="40dp"
			    android:text="最大电量"
			    android:textColor="@android:color/white"
			    android:textSize="25sp" />

			<TextView
			    android:id="@+id/TV2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:textSize="25sp"
			    android:layout_marginRight="40dp" />
        </RelativeLayout>
        
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@android:color/background_dark" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:orientation="horizontal" >
			<TextView
			    android:id="@+id/XinTextView5"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="40dp"
			    android:text="当前电量"
			    android:textColor="@android:color/white"
			    android:textSize="25sp" />

			<TextView
			    android:id="@+id/TV3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:textSize="25sp"
			    android:layout_marginRight="40dp" />
        </RelativeLayout>
		
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@android:color/background_dark" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:orientation="horizontal" >
			<TextView
			    android:id="@+id/XinTextView6"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="40dp"
			    android:text="电池温度"
			    android:textColor="@android:color/white"
			    android:textSize="25sp" />

			<TextView
			    android:id="@+id/TV4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:textSize="25sp"
			    android:layout_marginRight="40dp" />
        </RelativeLayout>
        
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@android:color/background_dark" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:orientation="horizontal" >
			<TextView
			    android:id="@+id/XinTextView7"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="40dp"
			    android:text="电池电压"
			    android:textColor="@android:color/white"
			    android:textSize="25sp" />

			<TextView
			    android:id="@+id/TV5"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:textSize="25sp"
			    android:layout_marginRight="40dp" />
        </RelativeLayout>
        
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@android:color/background_dark" />
        
        <RelativeLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:orientation="horizontal" >
			<TextView
			    android:id="@+id/XinTextView8"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="40dp"
			    android:text="电池工艺"
			    android:textColor="@android:color/white"
			    android:textSize="25sp" />

			<TextView
			    android:id="@+id/TV6"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:textSize="25sp"
			    android:layout_marginRight="40dp" />
        </RelativeLayout>

		<ImageView
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:src="@android:color/background_dark" />

   	</LinearLayout>
    <!-- 添加 -->
    </LinearLayout>

</LinearLayout>

