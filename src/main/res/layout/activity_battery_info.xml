<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/battery_level_status"
        android:layout_gravity="center_horizontal|left" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/battery_level_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="2dp"
        android:background="#ff0058c5"
         />
    <cn.edu.pkusz.battery.indicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#ff3c3c3c"
        custom:fillColor="#ffeeeeee"
        custom:pageColor="#88FF0000"
        custom:strokeColor="#ff0058c5"
        custom:strokeWidth="1dp"
        custom:radius="5dp"
        custom:centered="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#ff312c2f">

    </LinearLayout>

</LinearLayout>

